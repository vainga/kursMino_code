<Page x:Class="KursCode.MVVM.View.Pages.ClientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KursCode.MVVM.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1500"
      Title="ClientsPage">
    <Grid Background="#90e0ef">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="3.8*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.3*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Border BorderBrush="Gray" Grid.Column="0" Grid.Row="0"  Grid.RowSpan="3" HorizontalAlignment="Right" BorderThickness="2" Width="2"/>
            <TextBlock Text="Кандитаты" Grid.Column="0" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="27,40,0,0" Foreground="DarkBlue" FontSize="36" FontFamily="Corbel" FontWeight="Light"/>
            <Grid VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,50,0,0">
                <Border Width="300" Background="White" BorderBrush="Gray" BorderThickness="1.5" CornerRadius="15" Padding="10" HorizontalAlignment="Center" Margin="5,30,0,0">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="1.5" Direction="270" Opacity="0.5"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBox Text="Поиск..."  FontSize="15" Foreground="MidnightBlue" FontWeight="UltraLight" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" BorderBrush="Transparent" Width="300" ToolTip="Поиск"/>
                        <materialDesign:PackIcon Kind="Magnify" VerticalAlignment="Center" Grid.Row="1"  Width="20" Height="20" Foreground="Gray" HorizontalAlignment="Right" Margin="5"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
