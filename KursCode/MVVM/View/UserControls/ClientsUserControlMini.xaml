<UserControl x:Class="KursCode.MVVM.View.UserControls.ClientsUserControlMini"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KursCode.MVVM.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="300">
    <Border Background="White" CornerRadius="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="0.5*"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Foreground="DarkBlue" Text="Фамилия Имя Отчество" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="DemiBold" Margin="-45,0,0,0"></TextBlock>
            <Border Background="Gray" Height="0.2" Grid.Row="0" VerticalAlignment="Bottom" Margin="5,0,5,0"></Border>
            <Ellipse Fill="LightGray" Grid.Row="0" Width="40" Height="40" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0"></Ellipse>
        </Grid>
    </Border>
</UserControl>
